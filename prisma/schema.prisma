generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Grade {
  id        String   @id @default(uuid())
  name      String
  courses   Course[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("grade")
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String
  pdfUrl      String
  gradeId     String
  grade       Grade    @relation(fields: [gradeId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([gradeId])
  @@map("courses")
}
